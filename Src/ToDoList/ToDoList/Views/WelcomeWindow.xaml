<Window x:Class="ToDoList.Views.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="WelcomeWindow" Height="150" Width="200"
        WindowStyle="ToolWindow"
        Background="{DynamicResource MaterialDesignDarkBackground}"
        FontSize="18">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Foreground="White" Text="Welcome to ToDoList!" HorizontalAlignment="Center"/>
            <TextBlock Foreground="White" Text="Account Created!" HorizontalAlignment="Center"/>
            <Button Content="To the Main" HorizontalAlignment="Center" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
