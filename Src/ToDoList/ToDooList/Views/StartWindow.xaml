<Window x:Class="ToDoList.Views.StartWindow"
        x:Name="SWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800"
        Background="Black">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="MakeYourDay" FontSize="80" HorizontalAlignment="Center" Foreground="White"/>
            <Button Content="Sign In" HorizontalAlignment="Center" Margin="5" Width="90" Command="{Binding SignInCommand, Mode=OneWay}" CommandParameter="{Binding ElementName=SWindow}"/>
            <Button Content="Sign Up" HorizontalAlignment="Center" Margin="5" Width="90" Command="{Binding SignUpCommand, Mode=OneWay}" CommandParameter="{Binding ElementName=SWindow}"/>
        </StackPanel>
        
    </Grid>
</Window>
